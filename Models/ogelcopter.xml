<?xml version="1.0"?>

<PropertyList>

  <path>ogelcopter.ac</path>
  <offsets>
    <x-m> 1.000 </x-m>
    <y-m> 0.000 </y-m>
    <z-m> 0.750 </z-m>
  </offsets>

  <animation>
    <!-- Objets opaques -->
    <object-name>fuselage</object-name>
    <object-name>avant</object-name>
    <object-name>plots</object-name>
    <object-name>patins</object-name>
    <object-name>rotor</object-name>

    <object-name>Head</object-name>
    <object-name>Body</object-name>
    <object-name>Helmet</object-name>
    <object-name>LeftArm</object-name>
    <object-name>RightArm</object-name>
    <object-name>Legs</object-name>
  </animation>

  <!-- TÃªte et casque invisible depuis le cockpit -->
  <animation>
    <type>select</type>
    <object-name>Head</object-name>
    <object-name>Helmet</object-name>
    <condition>
      <greater-than>
        <property>sim/current-view/view-number</property>
        <value>0</value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Head</object-name>
    <object-name>Helmet</object-name>
    <property>/controls/flight/rudder</property>
    <factor>-90.0</factor>
    <axis>
      <x> 0.0 </x>
      <y> 0.0 </y>
      <z> 1.0 </z>
    </axis>
    <center>
      <x-m> -1.216 </x-m>
      <y-m>  0.013 </y-m>
      <z-m>  1.575 </z-m>
    </center>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Head</object-name>
    <object-name>Helmet</object-name>
    <property>/controls/flight/elevator</property>
    <factor>-45.0</factor>
    <axis>
      <x> 0.0 </x>
      <y> 1.0 </y>
      <z> 0.0 </z>
    </axis>
    <center>
      <x-m> -1.216 </x-m>
      <y-m>  0.013 </y-m>
      <z-m>  1.575 </z-m>
    </center>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>LeftArm</object-name>
    <property>/controls/flight/aileron</property>
    <factor>+22.5</factor>
    <offset>+1</offset>
    <axis>
      <x>0.0</x>
      <y>1.0</y>
      <z>0.0</z>
    </axis>
    <center>
      <x-m> -1.114 </x-m>
      <y-m> -0.917 </y-m>
      <z-m>  0.556 </z-m>
    </center>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>RightArm</object-name>
    <property>/controls/flight/aileron</property>
    <factor>-22.5</factor>
    <offset>+1</offset>
    <axis>
      <x> 0.0 </x>
      <y> 1.0 </y>
      <z> 0.0 </z>
    </axis>
    <center>
      <x-m> -1.065 </x-m>
      <y-m>  0.946 </y-m>
      <z-m>  0.467 </z-m>
    </center>
  </animation>

  <animation>
   <type>spin</type>
    <object-name>rotor</object-name>
    <property>/rotors/main/blade[0]/position-deg</property>
    <factor>0.1</factor>
    <max>30</max>
    <axis>
      <x> 0.0 </x>
      <y> 0.0 </y>
      <z> 1.0 </z>
    </axis>
    <center>
      <x-m> 0.222 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 2.594 </z-m>
    </center>
  </animation>

</PropertyList>

